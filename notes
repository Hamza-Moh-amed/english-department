import { Header } from "@/components/Header";
import { Navigation } from "@/components/Navigation";
import { NavLink } from "@/components/DesktopNavigation";
import { PageTitle } from "@/components/PageTitle";

export const metadata = {
  title: "Al-Azhar Visit",
  description:
    "A passage detailing the Al-Azhar Sheikh's visit to Riyadh, featuring Arabic and English texts with keywords translations.",
};


        <section id="al-azhar-visit" className="space-y-12">
          {/* Arabic Passage */}
          <div className="space-y-8" dir="rtl">
            <h2 className="text-2xl font-semibold text-center">
              شيخ األزهر يصل للرياض في أول زيارة للسعودية
            </h2>
            <article className="prose max-w-none text-right">
              <p className="mt-2 text-lg">
                الرياض- حازم الشرغاوي<br /><br />
                وصل أمس الإمام الأكبر شيخ الأزهر د.أحمد الطيب إلى الرياض في أول زيارة له إلى السعودية منذ أن أصبح شيخاً للأزهر. وكان استقباله بالصالة الملكية بمطار الملك خالد بالرياض وزير الشئون الإسلامية والأوقاف الشيخ صالح آل شيخ. وأكد السفير المصري في السعودية عفيفي عبدالوهاب أن شيخ الأزهر بدأ أمس زيارته للسعودية، حيث التقى خلالها مع ولي العهد الأمير سلمان بن عبدالعزيز وعدد من كبار المسؤولين.
              </p>
            </article>
          </div>
          {/* English Translation */}
          <div className="space-y-8">
            <h2 className="text-2xl font-semibold text-center">
              Al-Azhar Sheikh Arrives in Riyadh on His First Visit to Saudi Arabia
            </h2>
            <article className="prose max-w-none text-left md:text-justify">
              <p className="mt-2 text-lg">
                Riyadh – Hazem Al-Sharghawi<br /><br />
                Yesterday, the Grand Imam and Sheikh of Al-Azhar, Dr. Ahmed Al-Tayeb, arrived in Riyadh for his first visit to Saudi Arabia since he assumed the position of Sheikh of Al-Azhar. He was received at the royal hall of King Khalid Airport in Riyadh by the Minister of Islamic Affairs and Endowments, Sheikh Saleh Al-Al Sheikh. The Egyptian Ambassador to Saudi Arabia, Afifi Abdelwahab, confirmed that the Sheikh of Al-Azhar began his visit yesterday, during which he met with Crown Prince Salman bin Abdulaziz and several top officials.
              </p>
            </article>
          </div>
          {/* Keywords Section */}
          <div className="space-y-8">
            <h2 className="text-2xl font-semibold">
              Keywords & Translations / أهم المفردات والتعبيرات
            </h2>
            <div className="overflow-x-auto">
              <table className="min-w-full border border-gray-300">
                <thead>
                  <tr className="bg-gray-200">
                    <th className="px-4 py-2 border border-gray-300">
                      English
                    </th>
                    <th
                      className="px-4 py-2 border border-gray-300 text-right"
                      dir="rtl"
